{
  "name": "ts-playground",
  "version": "1.0.0",
  "description": "A structured learning environment for mastering TypeScript with a focus on backend development",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch",
    "test": "echo 'Running all tests...' && npm run test:stage1 && npm run test:stage2 && npm run test:stage3 && npm run test:stage4 && echo 'All tests completed successfully!'",
    "test:stage1": "cd stage1-foundations && npm test",
    "test:stage2": "cd stage2-cli && npm test",
    "test:stage3": "cd stage3-backend/exercises/user-api && npm test && cd ../todo-service && npm test && cd ../microservices/service-a && npm test && cd ../microservices/service-b && npm test",
    "test:stage4": "cd stage4-production && npm test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install || echo \"husky not installed\""
  },
  "keywords": [
    "typescript",
    "learning",
    "backend",
    "cli",
    "nodejs",
    "education"
  ],
  "author": "Kingson Wu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kingsonwu/ts-playground.git"
  },
  "bugs": {
    "url": "https://github.com/kingsonwu/ts-playground/issues"
  },
  "homepage": "https://github.com/kingsonwu/ts-playground#readme",
  "devDependencies": {
    "@types/node": "20.11.30",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "ts-jest": "29.1.1",
    "tsx": "4.7.1",
    "typescript": "5.3.3"
  },
  "workspaces": [
    "stage1-foundations",
    "stage2-cli",
    "stage2-cli/exercises/*",
    "stage3-backend",
    "stage3-backend/exercises/*",
    "stage4-production",
    "stage4-production/exercises/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
