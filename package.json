{
  "name": "ts-playground",
  "version": "1.0.0",
  "description": "A structured learning environment for mastering TypeScript with a focus on backend development",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch",
    "test": "jest",
    "lint": "npx eslint stage1-foundations/**/* stage2-cli/**/* stage3-backend/**/* stage4-production/**/* --ext .ts",
    "lint:fix": "npx eslint stage1-foundations/**/* stage2-cli/**/* stage3-backend/**/* stage4-production/**/* --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install || echo \"husky not installed\""
  },
  "keywords": [
    "typescript",
    "learning",
    "backend",
    "cli",
    "nodejs",
    "education"
  ],
  "author": "Kingson Wu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kingsonwu/ts-playground.git"
  },
  "bugs": {
    "url": "https://github.com/kingsonwu/ts-playground/issues"
  },
  "homepage": "https://github.com/kingsonwu/ts-playground#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "stage1-foundations",
    "stage2-cli",
    "stage2-cli/exercises/*",
    "stage3-backend",
    "stage3-backend/exercises/*",
    "stage4-production",
    "stage4-production/exercises/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}