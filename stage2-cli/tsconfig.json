{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["practice/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "exercises",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
